<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cadastro de Refeição"
             x:Class="MyNutritionApp.IncludeMeal">
  <ContentPage.Content>
    <StackLayout Padding="25">
      <Label Text="Descrição" />

      <Entry x:Name="entryDescription" Placeholder="ex: Filé de Frango" />

      <StackLayout Orientation="Horizontal">

        <Label Text="Calorias: " />

        <Label x:Name="labelCalories" Text="0" />

      </StackLayout>

      <Slider x:Name="calorieCounter" Minimum="0" Maximum="1000" ValueChanged="UpdateCalories" />

      <Button Text="Salvar" Clicked="SaveEntry" />

    </StackLayout>
  </ContentPage.Content>
</ContentPage>